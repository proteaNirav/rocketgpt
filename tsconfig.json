{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] },

    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2023",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],

    "jsx": "react-jsx",
    "types": ["node", "react", "react-dom"],

    "strict": true,
    "noEmit": true,

    // Next.js suggestions / requirements
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    // Optional, keeps TS happy with Next's plugin
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules", "rocketgpt_v3_full"]
}


