{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ArchivistStageReport",
  "type": "object",
  "required": ["stage", "evidence_sealed", "bundle_hash", "timestamp_utc"],
  "properties": {
    "stage": { "const": "archivist" },
    "evidence_sealed": { "type": "boolean" },
    "bundle_hash": { "type": "string" },
    "storage_location": { "type": "string" },
    "timestamp_utc": { "type": "string", "format": "date-time" }
  }
}
